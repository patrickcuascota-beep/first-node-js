{
  "variables": {
    "client_id": "{{env `AZURE_CLIENT_ID`}}",
    "client_secret": "{{env `AZURE_CLIENT_SECRET`}}",
    "subscription_id": "{{env `AZURE_SUBSCRIPTION_ID`}}",
    "tenant_id": "{{env `AZURE_TENANT_ID`}}",
    "resource_group_name": "packer-demo",
    "location": "eastus",
    "image_name": "webapp-nodejs-nginx-{{timestamp}}",
    "vm_size": "Standard_DC1s_v3",
    "ssh_username": "ubuntu",
    "vm_name": "webapp-vm"
  },
  "builders": [
    {
      "type": "azure-arm",
      "client_id": "{{user `client_id`}}",
      "client_secret": "{{user `client_secret`}}",
      "subscription_id": "{{user `subscription_id`}}",
      "tenant_id": "{{user `tenant_id`}}",
      "use_azure_cli_auth": true,
      "resource_group_name": "packer-rg-{{timestamp}}",
      "location": "{{user `location`}}",
      "managed_image_resource_group_name": "{{user `resource_group_name`}}",
      "managed_image_name": "{{user `image_name`}}",
      "image_offer": "0001-com-ubuntu-server-jammy",
      "image_publisher": "Canonical",
      "image_sku": "22_04-lts-gen2",
      "os_type": "Linux",
      "vm_size": "{{user `vm_size`}}",
      "ssh_username": "{{user `ssh_username`}}",
      "ssh_pty": true,
      "managed_image_storage_account_type": "Standard_LRS",
      "ssh_timeout": "5m",
      "communicator": "ssh",
      "azure_tags": {
        "Name": "Web App Base Image",
        "Environment": "Production",
        "OS_Version": "Ubuntu 22.04"
      }
    }
  ],
  "provisioners": [
    {
      "type": "shell",
      "inline": [
        "sudo apt-get update -y",
        "sudo apt-get install -y apt-transport-https ca-certificates curl gnupg lsb-release"
      ]
    },
    {
      "type": "shell",
      "inline": [
        "echo 'Verificando version de Ubuntu...'",
        ". /etc/os-release",
        "echo \"Version detectada: $VERSION_ID\"",
        "if [ \"$VERSION_ID\" != \"22.04\" ]; then",
        "  echo \"Se detecto: $VERSION_ID\"",
        "fi"
      ]
    },
    {
      "type": "shell",
      "inline": [
        "echo 'Actualizando sistema...'",
        "sudo apt-get update -y",
        "sudo apt-get upgrade -y"
      ]
    },
    {
      "type": "shell",
      "inline": [
        "echo 'Instalando dependencias previas...'",
        "sudo apt-get install -y curl wget gnupg2 build-essential"
      ]
    },
    {
      "type": "shell",
      "inline": [
        "echo 'Instalando Node.js...'",
        "cd ~",
        "curl -sL https://deb.nodesource.com/setup_20.x -o nodesource_setup.sh",
        "sudo bash nodesource_setup.sh",
        "sudo apt-get install -y nodejs",
        "sudo npm install -g pm2",
        "node -v",
        "npm -v"
      ]
    },
    {
      "type": "shell",
      "inline": [
        "echo 'Instalando Nginx...'",
        "sudo apt-get install -y nginx",
        "sudo systemctl enable --now nginx"
      ]
    },
    {
      "type": "file",
      "source": "hello.js",
      "destination": "/tmp/hello.js"
    },
    {
      "type": "shell",
      "inline": [
        "echo 'Creando directorio de aplicacion...'",
        "sudo mkdir -p /opt/nodejs-app",
        "sudo cp /tmp/hello.js /opt/nodejs-app/",
        "sudo chown -R www-data:www-data /opt/nodejs-app"
      ]
    },
    {
      "type": "shell",
      "inline": [
        "echo 'Configurando PM2 para iniciar la aplicacion...'",
        "sudo pm2 start /opt/nodejs-app/hello.js --name hello-app --watch",
        "sudo pm2 startup systemd",
        "sudo pm2 save"
      ]
    },
    {
      "type": "shell",
      "inline": [
        "echo 'Configurando Nginx como proxy inverso...'",
        "sudo tee /etc/nginx/sites-available/default > /dev/null << 'NGINX_CONFIG'\nserver {\n    listen 80 default_server;\n    listen [::]:80 default_server;\n    server_name _;\n\n    location / {\n        proxy_pass http://localhost:3000;\n        proxy_http_version 1.1;\n        proxy_set_header Upgrade $http_upgrade;\n        proxy_set_header Connection 'upgrade';\n        proxy_set_header Host $host;\n        proxy_set_header X-Real-IP $remote_addr;\n        proxy_set_header X-Forwarded-For $proxy_add_x_forwarded_for;\n        proxy_set_header X-Forwarded-Proto $scheme;\n        proxy_cache_bypass $http_upgrade;\n    }\n}\nNGINX_CONFIG",
        "sudo nginx -t",
        "sudo systemctl restart nginx"
      ]
    },
    {
      "type": "shell",
      "inline": [
        "echo 'Limpiando...'",
        "sudo apt-get clean",
        "sudo rm -rf /tmp/*"
      ]
    }
  ],
  "post-processors": [
    {
      "type": "manifest",
      "output": "manifest.json",
      "strip_path": true
    },
    {
      "type": "shell-local",
      "inline": [
        "echo 'Subscription ID: {{user `subscription_id`}}'",
        "echo 'Resource Group: {{user `resource_group_name`}}'",
        "echo 'Image Name: {{user `image_name`}}'"
      ]
    },
    {
      "type": "shell-local",
      "inline": [
        "echo 'Subscription ID: {{user `subscription_id`}}'",
        "echo 'Resource Group: {{user `resource_group_name`}}'",
        "echo 'Image Name: {{user `image_name`}}'",
        "echo 'Creando VM desde imagen de Azure...'",
        "az vm create --resource-group {{user `resource_group_name`}} --name {{user `vm_name`}} --image {{user `image_name`}} --admin-username {{user `ssh_username`}} --generate-ssh-keys --size {{user `vm_size`}} --public-ip-sku Standard --output table",
        "az vm open-port --resource-group {{user `resource_group_name`}} --name {{user `vm_name`}} --port 80 --output table"
      ],
      "only": ["azure-arm"]
    }
  ]
}
